{
    "name": "vscode-node-tap",
    "displayName": "Node Tap Runner",
    "description": "Test runner for Tap in Node.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/sarneeh/vscode-node-tap.git"
    },
    "version": "0.1.0",
    "publisher": "sarneeh",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "tap",
        "node-tap",
        "test runner"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "@types/micromatch": "^3.1.0",
        "micromatch": "^3.1.10"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "activationEvents": [
        "onLanguage:javascript",
        "onCommand:node-tap.runTest"
    ],
    "contributes": {
        "keybindings": {
            "command": "node-tap.runTest",
            "key": "f8"
        },
        "configuration": {
            "type": "object",
            "title": "Node Tap configuration",
            "properties": {
                "node-tap.testFilePatterns": {
                    "type": "array",
                    "default": [
                        "*.test.js"
                    ]
                }
            }
        }
    }
}
