{
    "name": "vscode-node-tap",
    "displayName": "Node Tap Runner",
    "description": "Test runner for Tap in Node.js",
    "version": "0.1.0",
    "publisher": "sarneeh",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vscode-node-tap.runTest"
    ],
    "main": "./out/extension",
    "contributes": {
        "keybindings": {
            "command": "vscode-node-tap.runTest",
            "key": "f8"
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
